using namespace std;


int main(){
    int n;
    cin >> n;
    int counter=0;
    int max;
    int top=0;
    while(n>0)
    {
        int remainder = n%2;        
        n=n/2;        
        if(remainder == 1)
        {
          counter ++;
            if(counter>=max)
              {
               max = counter;}
             }
        else
        {
            counter = 0;
        }
    }
    cout<<max<<endl;;
    
    
    return 0;
}

        
       
